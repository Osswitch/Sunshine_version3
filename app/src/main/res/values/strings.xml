    <string name="format_full_friendly_date"><xliff:g id="month">%1$s</xliff:g>, <xliff:g id="day">%2$s</xliff:g>
    </string>

    <!-- Temperature formats-->
    <string name="format_temperature"><xliff:g id="temp">%1.0f</xliff:g>\u00B0
    </string>

